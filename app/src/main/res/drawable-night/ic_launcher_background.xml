<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark mode background - Darker, more muted -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#0D1B2A"
                android:centerColor="#1B2838"
                android:endColor="#1E3A5F" />
        </shape>
    </item>
    <!-- Subtle glow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="180dp"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
</layer-list>
