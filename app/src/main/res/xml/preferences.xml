<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="保活设置"
        android:summary="确保应用后台稳定运行"
        app:iconSpaceReserved="false">

        <Preference
            android:key="keep_alive_status"
            android:title="保活状态"
            android:summary="点击查看当前状态和建议"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="battery_optimization"
            android:title="电池优化"
            android:summary="忽略电池优化（必须）"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="pref_keep_alive_auto_start"
            android:title="自启动管理"
            android:summary="允许应用在后台自动启动" />

        <Preference
            android:key="pref_keep_alive_accessibility"
            android:title="@string/accessibility_permission"
            android:summary="@string/accessibility_summary" />

        <Preference
            android:key="background_settings"
            android:title="后台运行"
            android:summary="允许后台活动"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="notification_permission"
            android:title="通知权限"
            android:summary="确保通知正常显示"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="exact_alarm"
            android:title="精确闹钟"
            android:summary="允许精确定时任务（Android 12+）"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="app_settings"
            android:title="应用设置"
            android:summary="打开系统应用详情页"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/security_settings"
        app:iconSpaceReserved="false">

        <Preference
            android:key="regenerate_key"
            android:title="重新生成设备码"
            android:summary="仅更换设备码，保留加密密钥"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="regenerate_all"
            android:title="完全重置"
            android:summary="更换设备码和加密密钥（泄露时使用）"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/about"
        app:iconSpaceReserved="false">

        <Preference
            android:key="version"
            android:title="@string/version"
            android:selectable="false"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

</PreferenceScreen>
