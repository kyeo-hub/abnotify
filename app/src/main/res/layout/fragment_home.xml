<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- STATUS BAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_clean_status"
            android:backgroundTint="@color/status_clean_connected_bg"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="18dp"
            android:id="@+id/statusContainer">

            <ImageView
                android:id="@+id/ivStatusIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_fluent_wifi"
                app:tint="@color/status_clean_connected_text" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieStatus"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:visibility="gone"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_fileName="anim_connected.json" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="服务已连接"
                android:textColor="@color/status_clean_connected_text"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>



        <!-- DEVICE IDENTITY CARD -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_fluent_key"
                        app:tint="?attr/colorOnSurfaceVariant" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="设备身份 (Device Identity)"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />
                </LinearLayout>

                <!-- Key Box -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_clean_input"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

                    <TextView
                        android:id="@+id/tvDeviceKey"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="monospace"
                        android:text="Loading..."
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:ellipsize="middle" />

                    <ImageView
                        android:id="@+id/btnCopyPushUrl"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_fluent_copy"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="2dp"
                        android:clickable="true" />
                        
                    <ImageView
                        android:id="@+id/btnRefreshKey"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_fluent_refresh"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="此密钥用于向您的设备发送加密推送消息。"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- SERVER CONFIG CARD -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_fluent_cloud"
                        app:tint="?attr/colorOnSurfaceVariant" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="当前服务器"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />
                </LinearLayout>

                <!-- Server Input Box (Display only) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_clean_input"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

                    <TextView
                        android:id="@+id/tvServerUrl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="https://an.trah.cn"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp" />
                    
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/bg_clean_status"
                        android:backgroundTint="@color/status_clean_connected_text"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_clean_button_primary"
                    android:gravity="center"
                    android:text="注册设备 / 同步连接"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp" 
                    android:clickable="true"
                    android:focusable="true"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- LEARN HOW TO USE CARD -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTutorial"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:padding="20dp">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_clean_input">
                     <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_fluent_book"
                        app:tint="?attr/colorOnSurface" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学习怎么用"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="了解如何发送推送消息"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp" />
                </LinearLayout>
                
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_fluent_chevron_right"
                    app:tint="?attr/colorOnSurfaceVariant" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- SYSTEM PERMISSIONS CARD -->

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_fluent_settings"
                        app:tint="?attr/colorOnSurfaceVariant" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="系统权限"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />
                </LinearLayout>

                <!-- Accessibility Row -->
                <LinearLayout
                    android:id="@+id/cardAccessibility"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:paddingVertical="12dp">
                    
                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_clean_input">
                         <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_fluent_settings"
                            app:tint="?attr/colorOnSurface" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="无障碍服务"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="增强后台稳定性及消息处理"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp" />
                    </LinearLayout>
                    
                    <ImageView
                        android:id="@+id/btnOpenAccessibility"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_fluent_chevron_right"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </LinearLayout>
                
                <View 
                    android:layout_width="match_parent" 
                    android:layout_height="1dp"
                    android:background="@color/clean_divider"
                    android:layout_marginVertical="8dp"/>

                 <!-- Auto Start Row -->
                <LinearLayout
                    android:id="@+id/cardAutoStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:paddingVertical="12dp">
                    
                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_clean_input">
                         <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_fluent_power"
                            app:tint="?attr/colorOnSurface" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="自启动"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="允许应用开机自动运行"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp" />

                    </LinearLayout>
                    
                    <ImageView
                        android:id="@+id/btnOpenAutoStart"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_fluent_chevron_right"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>



        <!-- Privacy Policy Only -->
        <TextView
            android:id="@+id/tvPrivacyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="隐私政策与条款"
            android:textColor="@color/clean_text_secondary"
            android:textSize="12sp"
            android:padding="8dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
